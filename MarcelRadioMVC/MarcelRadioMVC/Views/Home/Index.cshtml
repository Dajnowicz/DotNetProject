@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
<ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
</ol>
<div class="carousel-inner" role="listbox">
    <div class="item active">
        <img src="~/images/radio1.jpg" alt="ASP.NET" class="img-responsive" />
        <div class="carousel-caption" role="option">
            <p style="font-size: 50px; color: #eff0ff;">
                <b>All Available Podcasts From MarcelRadio!</b>
            </p>
        </div>
    </div>
    <div class="item">
        <img src="~/images/radio2.jpg" alt="Visual Studio" class="img-responsive" />
        <div class="carousel-caption" role="option">
            <p style="font-size: 36px; color: #eff0ff;">
                Check All Previous Podcasts!</br>
                <a class="btn btn-danger" href="http://localhost:54565/Sessions">
                    Click Me!
                </a>
            </p>
        </div>
    </div>
</div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    @await Html.PartialAsync("_HomeViewPartial", @UserManager.GetUserName(User))
    <p style="margin:0px"/>
</div>